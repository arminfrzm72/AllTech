@model ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

<section class="last-news-section border-radius ">
    <header><i class="fa fa-lock fa-2x"></i>  <h3>تغییر کلمه عبور </h3> </header>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="ChangePassword" method="post" style="margin-right:30px;">
                <br />
                @if (ViewBag.IsSuccess != null)
                {
                    <div class="alert alert-success">
                        کلمه عبور با موفقیت تغییر یافت
                    </div>
                }
                <div class="form-group">
                    <label asp-for="OldPassword" class="control-label"></label>
                    <input asp-for="OldPassword" type="password" class="form-control" placeholder="کلمه عبور فعلی" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور جدید" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RePassword" class="control-label"></label>
                    <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار کلمه عبور جدید" />
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="ثبت تغییرات" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</section>

