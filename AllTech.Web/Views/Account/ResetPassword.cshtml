@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<h2>بازیابی کلمه عبور</h2>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="ResetPassword" method="post">

            <input type="hidden" asp-for="ActiveCode" />
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور" />
            </div>
            <div class="form-group">
                <label asp-for="RePassword" class="control-label"></label>
                <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار کلمه عبور" />
            </div>
            <div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت تغییرات" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

