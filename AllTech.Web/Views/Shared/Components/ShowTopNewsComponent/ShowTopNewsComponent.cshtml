@model IEnumerable<News>

<section class="last-news-side border-radius">
    <header><i class="fa fa-star fa-2x" style="color:#FF393A"></i> <h3> پربازدیدترین اخبار </h3></header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius thumbnail" src="~/NewsImages/@item.ImageName">
                <h2> <a href="~/News/@item.NewsID ">@item.NewsTitle</a></h2>
                <span>انتشار : @item.CreateDate.ToShamsi()</span>
            </li>

        }
    </ul>
</section>